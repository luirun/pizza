<p id="notice"><%= notice %></p>
<div id="content">

	<div class="post-cover">
		<%= image_tag @post.cover.url %>
	</div>
	
	<div class="post-info">
		
		<div class="post-title">
			<%= @post.tytul %>
		</div>
		
		<div class="post-category">
			Kategoria: Promocje
		</div>
		
		<div class="post-date">
			Dodano: <%= @post.created_at %>
		</div>
		
	</div>
	
	<div class="post-share">
		<img class="facebook" src="https://cdn1.iconfinder.com/data/icons/logotypes/32/square-facebook-128.png" >
		<img class="twitter" src="https://cdn1.iconfinder.com/data/icons/logotypes/32/twitter-128.png" >
		<img class="youtube" src="https://cdn2.iconfinder.com/data/icons/ios-7-style-metro-ui-icons/128/Flurry_YouTube_Alt2.png" >
		<img class="instagram" src="https://5a5a57ff32a328601212-ee0df397c56b146e91fe14be42fa361d.ssl.cf1.rackcdn.com/icon/instagram_logos_glyph/03H5cHNMt-Jni4pe9u+7/glyph-logo_May2016_200.png" >
	</div>
	
	<div class="post-description">
		<%= @post.dlugi_opis %>
	</div>
	
	<div class="post-tags">
		Hasztagi: <%= @post.tagi %>
	</div>
	Krotki opis[Only in dev mode]: <%= @post.krotki_opis %>
	<%= link_to 'Destroy', @post, method: :delete, data: { confirm: 'Are you sure?' } %>
	<%= link_to 'Edit', edit_post_path(@post) %> |
	<%= link_to 'Back', posts_path %>

<br>

</div>

    <script src="http://code.jquery.com/jquery-1.10.2.js"></script>
    <script src="http://code.jquery.com/ui/1.10.4/jquery-ui.js"></script>
<script>
$(".facebook").hover(function() {

  if ( !$(this).data("bouncing") ){
      $(this).effect("bounce", { times:2 },  { duration:300, queue: false})
      .data("bouncing", true);
	}
},function () {
     $(this).data("bouncing", false);
});




